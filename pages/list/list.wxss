/* pages/list/list.wxss */

page {
    background-color: #fff;
}

.shop {
    display: flex;
    padding: 20rpx;
    border-bottom: 1px solid #ccc;
    position: relative;
}

.shop-img {
    width: 150rpx;
    height: 200rpx;
    margin-right: 20rpx;
    /* margin-top: 50rpx; */
}

.shop-info {
    display: flex;
    flex-direction: column;
     width: 430rpx; 
}

.shop-star {
    width: 153rpx;
    position: absolute;
    right: 0;
}

.shop-star .star-before {
    color: #f90;
    position: absolute;
    overflow: hidden;
}

.shop-star .star-after {
    color: #e2e2e2;
    position: absolute;
}

.shop-info {
    display: flex;
    flex-direction: column;
    font-size: 12px;
    color: #666;
    line-height: 1.5;
}

.shop-name {
    font-size: 16px;
    color: #333;
}

.shop-time {
    color: #444;
}
